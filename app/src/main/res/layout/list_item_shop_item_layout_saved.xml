    <TextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textSize="17sp"
        android:textColor="@color/colorWhite"
        android:background="#aa424242"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available : 21"
        android:id="@+id/itemsAvailable"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/shopImage"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="45dp" />

        <TextView

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:background="#aa424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21 Km"
            android:id="@+id/distance"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp" />


        <TextView

            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:background="#aa424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivery : Rs 20"
            android:id="@+id/deliveryCharge"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="45dp" />


        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:background="#aa424242"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Price : Rs 70"
            android:id="@+id/itemPrice"
            android:layout_marginRight="5dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"/>


        <ImageView
            android:src="@drawable/ic_favorite_border_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/favourite"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="30dp"/>

</RelativeLayout>


