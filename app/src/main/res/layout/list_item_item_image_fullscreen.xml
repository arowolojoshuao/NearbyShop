        android:scaleType="centerCrop"
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <ProgressBar
        android:layout_marginTop="-6dp"
        android:visibility="visible"
        android:id="@+id/progress_bar"
