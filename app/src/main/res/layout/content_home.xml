        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>


        <ImageView
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/app_icon"
            android:scaleType="centerCrop"
            android:src="@mipmap/blue_icon"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <TextView
            android:textSize="20dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:text="Nearby Shops"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <RelativeLayout
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/status_indicator_one"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gplus_color_1"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


                <!--
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textColorHighlight="@color/white"
                android:textColorLink="@color/white"

                android:textColorHint="@color/white"
                -->

                <android.support.design.widget.TextInputLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/text_input_service_url"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textUri"
                        android:id="@+id/serviceURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter Service URL"/>

                </android.support.design.widget.TextInputLayout>



            <!--<TextView-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:layout_marginRight="10dp"-->
                <!--android:layout_marginEnd="10dp"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:id="@+id/border_text_input"-->
                <!--android:layout_below="@id/text_input_service_url"-->
                <!--android:background="#88000000"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp" />-->


            <!--android:layout_below="@id/border_text_input"-->
            <LinearLayout
                android:layout_below="@id/text_input_service_url"
                    android:layout_marginTop="5dp"
                    app:layout_scrollFlags="scroll|enterAlways"
                    android:layout_marginBottom="0dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/discover_services_button"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@color/buttonColor"
                        android:padding="10dp"
                        android:paddingRight="1dp"
                        android:paddingLeft="10dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Select Service"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/paste_url_button"
                        android:layout_marginBottom="10dp"
                        android:textColor="@color/white"
                        android:layout_marginRight="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/cyan900"
                        android:padding="10dp"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:text="Paste Service URL"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        <!--</android.support.v7.widget.CardView>-->

        
        <TextView
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />


        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/market_information_label"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:visibility="gone"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:background="@color/gplus_color_1"
                android:layout_width="28dp"
                android:layout_height="match_parent" />

            <TextView
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="About Service"
                android:background="@color/backgroundTinted"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:visibility="gone"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/gplus_color_2"
                android:layout_width="28dp"
                android:layout_height="match_parent" />


            <!--android:paddingStart="7dp"-->
            <!--android:paddingLeft="7dp"-->
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:background="@color/buttonColorDark"
                android:textColor="@color/colorWhite"
                android:id="@+id/show_hide_location_settings"
                android:text="Current Location"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent" />

        </LinearLayout>



        <android.support.v7.widget.CardView
            android:visibility="gone"
            app:cardCornerRadius="0dp"
            app:contentPadding="10dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/market_information"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_marginBottom="0dp"
                    android:textSize="20sp"
                    android:text="Nearby Shops Official : Hyderabad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_marginTop="5dp"
                    android:background="#88000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />



                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/market_logo"
                        android:background="@color/backgroundTinted"
                        android:layout_marginTop="0dp"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />


                    <!--android:layout_alignParentRight="true"-->
                    <!--android:layout_alignParentEnd="true"-->
                    <TextView
                        android:gravity="end"
                        android:layout_alignParentTop="true"
                        android:id="@+id/market_rating"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_alignTop="@id/market_logo"
                        android:layout_toRightOf="@id/market_logo"
                        android:layout_toEndOf="@id/market_logo"
                        android:text="Market Rating : 4.5 / 10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:gravity="end"
                        android:id="@+id/ratings_count_market"
                        android:layout_below="@id/market_rating"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/market_logo"
                        android:layout_toEndOf="@id/market_logo"
                        android:text="2194 Ratings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />



                    <TextView
                        android:gravity="end"
                        android:id="@+id/market_distance"
                        android:layout_below="@id/ratings_count_market"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/market_logo"
                        android:layout_toEndOf="@id/market_logo"
                        android:text="Distance : 5 Km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:layout_marginTop="5dp"
                        android:id="@+id/market_description"
                        android:layout_below="@id/market_distance"
                        android:layout_marginStart="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/market_logo"
                        android:layout_toEndOf="@id/market_logo"
                        android:text="Fruits, Vegetables, Groceries and food Delivery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:background="#88000000"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />


                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginLeft="0dp"
                    android:text="This is official market for nearby shops in pune. This market caters to fruits vegetables and daily supplies. "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </android.support.v7.widget.CardView>


