        <RelativeLayout
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/location_settings_block"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:id="@+id/text_update"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="#ffffff"
                android:background="@color/deepOrange800"
                android:text="Update Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <TextView
                android:gravity="center"
                android:layout_below="@id/text_update"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@id/text_update"
                android:text="Latitude    : 00.0000\nLongitude : 00.0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_lat_lon" />



            <!--android:text="Current Address (Approx) :\nHAL Colony, Balanagar, Hyderabad - 500042"-->

            <TextView
                android:layout_alignTop="@id/text_update"
                android:id="@+id/text_address"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/text_lat_lon"
                android:layout_marginTop="0dp"
                android:text="Address is not available !"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>





        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>


        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Shops Nearby"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/row_two"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_menu_options_row_height"
            android:orientation="horizontal">




            <RelativeLayout
                android:layout_marginRight="5dp"
                android:layout_marginEnd="5dp"
                android:id="@+id/option_shops_nearby"
                android:background="@color/phonographyBlue"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">


                <TextView
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/text_shopsNearby"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shops"/>

                <ImageView
                    app:srcCompat="@drawable/ic_domain_black_24px"
                    android:layout_above="@id/text_shopsNearby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/option_shops_by_category"
                android:background="@color/gplus_color_2"
                android:layout_width="0dp"
                android:layout_height="@dimen/home_menu_options_row_height"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/text_shops_by_category"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shops by Category"/>


                <ImageView
                    app:srcCompat="@drawable/ic_home_black_24px"
                    android:padding="0dp"
                    android:layout_above="@id/text_shops_by_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>



        </LinearLayout>



        <TextView
            android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:background="@color/blueGrey800"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        <TextView
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="Items Nearby"
            android:background="#22000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <RelativeLayout
                android:id="@+id/option_items"
                android:background="@drawable/selector_button"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/itemsNearby"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:padding="5dp"
                    android:textSize="17sp"
                    android:textColor="@color/colorWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items"/>



                <ImageView
                    app:srcCompat="@drawable/ic_dns_black_24px"
                    android:padding="10dp"
                    android:layout_above="@id/itemsNearby"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </RelativeLayout>


            <LinearLayout
                android:layout_weight="0"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/option_items_by_category"
                android:background="@color/gplus_color_1"
                android:layout_width="0dp"
                android:layout_height="@dimen/home_menu_options_row_height"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/text_itemCategories"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Items by Category"/>


                <ImageView
                    app:srcCompat="@drawable/ic_items_24px"
                    android:padding="0dp"
                    android:layout_above="@id/text_itemCategories"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />



            </RelativeLayout>

        </LinearLayout>

        
        <TextView
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        
        

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/filter_shops"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:textColor="#ffffff"
                android:background="@color/blueGrey800Transparent"
                android:text="Filter Shops"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/experimental_features"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingLeft="5dp"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:textColor="#ffffff"
                android:background="@color/cyan900"
                android:text="Experimental Features"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>