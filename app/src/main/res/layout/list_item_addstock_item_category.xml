<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:id="@+id/itemCategoryListItem"
        android:paddingBottom="0dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="#66000000"
                android:id="@+id/categoryImage"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="150dp" />



            <TextView
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="#77000000"
                android:textColor="@color/white"
                android:id="@+id/categoryName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:text="Category Name"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_alignBottom="@+id/categoryImage"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:background="#77000000"
                android:textColor="@color/white"
                android:id="@+id/categoryDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category Description"
                android:layout_marginBottom="15dp"
                android:layout_above="@+id/categoryName"
                android:layout_alignRight="@+id/categoryName"
                android:layout_alignEnd="@+id/categoryName" />

        </RelativeLayout>




        <LinearLayout
            android:layout_marginTop="5dp"
            android:background="#88000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/editIcon"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_details_black_48px"/>

            <TextView

                android:id="@+id/editText"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:text="Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"

                android:background="#88000000"
                android:layout_width="1dp"
                android:layout_height="25dp"/>


            <ImageView
                android:id="@+id/moreOptions"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_more_vert_black_24dp"/>


        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>