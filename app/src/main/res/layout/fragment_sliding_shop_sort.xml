<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="end"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:layout_marginLeft="@dimen/slidinglayerwidth"
    android:layout_marginStart="@dimen/slidinglayerwidth"-->

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/slidingContents"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_sortby"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Sort Items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/border_zero"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sortby"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/sort_bar"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/border_zero"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sort_by_name"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="@string/sort_by_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/sort_by_created"
                android:layout_below="@id/sort_bar"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_created"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/sort_row_two"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:layout_below="@id/sort_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shop_count"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="Shop Count"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/price_average"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Price Average"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <TextView
            android:id="@+id/border_one"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sort_row_two"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/row_sort_order"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/border_one"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/gplus_color_2"
                android:textColor="@color/white"
                android:id="@+id/sort_ascending"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_ascending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sort_descending"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_descending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>
