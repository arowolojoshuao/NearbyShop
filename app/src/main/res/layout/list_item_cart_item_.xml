        <TextView
            android:textColor="@color/colorWhite"
            android:background="#33000000"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/10"
            android:id="@+id/rating"
            android:layout_marginLeft="105dp"
            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp" />



        <ImageView
            android:src="@drawable/ic_favorite_border_white_24px"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/favourite"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="10dp"/>

</RelativeLayout>


    <LinearLayout
        android:layout_marginBottom="0dp"
        android:background="#88000000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="0dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Available : 00"
            android:id="@+id/itemsAvailable"

            android:layout_alignBottom="@+id/shopImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_marginRight="0dp"
            android:layout_alignLeft="@id/itemPrice"
            android:layout_below="@id/shopImage"
            android:background="#000000"
            android:layout_width="1dp"
            android:layout_height="20dp"/>

        <TextView
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Price : Rs 0"
            android:id="@+id/itemPrice"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@id/shopImage"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />




    </LinearLayout>

