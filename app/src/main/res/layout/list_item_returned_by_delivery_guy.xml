<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_delivery_address"
    android:layout_margin="5dp"
    android:background="#22000000"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/order_id"
        android:padding="5dp"
        android:textSize="25dp"
        android:text="Order ID : 1234567"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/border"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/order_id"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>



    <TextView
        android:layout_below="@id/border"
        android:id="@+id/dateTimePlaced"
        android:padding="5dp"
        android:textSize="15dp"
        android:text="Placed : 21 June 2016: 5:45 PM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />









    <TextView
        android:layout_below="@id/dateTimePlaced"
        android:id="@+id/deliveryAddressName"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="20dp"
        android:text="Sumeet Kumar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <TextView
        android:layout_below="@id/deliveryAddressName"
        android:id="@+id/deliveryAddressPhone"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:textSize="15dp"
        android:text="Phone: 9490523891"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_below="@id/deliveryAddressPhone"
        android:id="@+id/deliveryAddress"
        android:paddingLeft="5dp"
        android:textSize="15dp"
        android:text="K-53, BEL Colony, Koramangla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:layout_below="@id/deliveryAddress"
        android:orientation="horizontal"
        android:id="@+id/borderFour"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_below="@id/borderFour"
        android:id="@+id/numberOfItems"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="23 Items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <TextView
        android:layout_below="@id/borderFour"
        android:layout_toRightOf="@id/numberOfItems"
        android:id="@+id/orderTotal"
        android:padding="5dp"
        android:textSize="20sp"
        android:text="| Total : Rs 502.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_below="@id/numberOfItems"
        android:orientation="horizontal"
        android:id="@+id/borderTwo"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:textColor="#ffffff"
        android:background="@color/blueGrey800"
        android:layout_below="@id/borderTwo"
        android:id="@+id/currentStatus"
        android:padding="5dp"
        android:textSize="15dp"
        android:text="Current Status : Confirmed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/borderThree"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/currentStatus"
        android:background="#88000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:visibility="gone"
        android:layout_below="@id/borderThree"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/acceptHandoverButton"
            android:padding="10dp"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="@color/teal"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Unpack Package"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>