<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="end"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--android:layout_marginLeft="@dimen/slidinglayerwidth"
    android:layout_marginStart="@dimen/slidinglayerwidth"-->

    <RelativeLayout
        android:layout_margin="10dp"
        android:id="@+id/slidingContents"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/text_sortby"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:text="Sort Service's"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/border_zero"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/text_sortby"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/header_criterion"
            android:text="Sort Criterion"
            android:layout_below="@id/border_zero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/sort_bar"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/header_criterion"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sort_service_range"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="Service Range"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/service_name"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Service Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>




        <LinearLayout
            android:id="@+id/sort_row_three"
            android:layout_marginTop="5dp"
            android:weightSum="2"
            android:layout_below="@id/sort_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/updated"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:background="#22000000"
                android:text="Updated"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#22000000"
                android:id="@+id/sort_created"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Created"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="40dp"
            android:layout_marginEnd="40dp"
            android:id="@+id/border_one"
            android:background="#55000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/sort_row_three"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/header_sort_order"
            android:text="Sort Order"
            android:layout_below="@id/border_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/row_sort_order"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:layout_below="@id/header_sort_order"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/gplus_color_2"
                android:textColor="@color/white"
                android:id="@+id/sort_ascending"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_ascending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/sort_descending"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/sort_by_descending"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>




        <TextView
            android:id="@+id/border_two"
            android:background="#88000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/row_sort_order"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <TextView
            android:layout_below="@id/border_two"
            android:id="@+id/header_filter"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:text="Filter Service's"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="40dp"
            android:id="@+id/border_three"
            android:background="#55000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/header_filter"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <TextView
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/header_filter_stars"
            android:text="Filter by Official and Verified"
            android:layout_below="@id/border_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/clear_filters"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/border_three"
            android:text="Clear Filter's"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/row_filters"
            android:layout_marginTop="15dp"
            android:weightSum="2"
            android:layout_below="@id/header_filter_stars"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/phonographyBlue"
                android:textColor="@color/white"
                android:id="@+id/filter_official"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Official"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/filter_verified"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Verified"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="40dp"
            android:id="@+id/border_four"
            android:background="#55000000"
            android:layout_marginTop="10dp"
            android:layout_below="@id/row_filters"
            android:layout_width="match_parent"
            android:layout_height="1dp" />



        <TextView
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/header_filter_by_type"
            android:text="Filter by Service Type"
            android:layout_below="@id/border_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/clear_filters_type"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/border_four"
            android:text="Clear Filter's"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/row_filters_type"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:layout_below="@id/header_filter_by_type"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/buttonColorDark"
                android:textColor="@color/white"
                android:id="@+id/filter_nonprofit"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Nonprofit"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/filter_government"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Government"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />



            <TextView
                android:id="@+id/filter_commertial"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:background="#22000000"
                android:padding="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Commertial"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />


        </LinearLayout>



    </RelativeLayout>

</ScrollView>
